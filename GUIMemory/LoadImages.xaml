<Window x:Class="GUIMemory.LoadImages"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUIMemory"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Upload Images" Height="517" Width="266">
    <Grid Margin="0,0,10,0">
        <Label x:Name="InsertImagesLabel" Content="Please insert 5 images" HorizontalAlignment="Center" Height="91" Margin="0,5,0,0" VerticalAlignment="Top" Width="476" FontSize="20" HorizontalContentAlignment="Center"/>
        <StackPanel x:Name="myStackPanel" Margin="0,50,0,310">
            <Button x:Name="UploadImageBtn" Content="Upload Image" Click="UploadImage_Click" Height="55" Width="160"/>
            <Button x:Name="RandomImagesBtn" Content="Use random Images from folder" Click="RandomImagesBtn_Click" Height="49" Width="199" Margin="0,10,0,0"/>
        </StackPanel>
        <Image x:Name="UploadedImage" Margin="30,259,30,36"/>
    </Grid>
</Window>
